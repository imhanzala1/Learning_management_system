<div class="container-fluid border rounded shadow mt-5 p-4 text-center w-75 bg-light">
  <h1>Enrollments</h1>
</div>

<div class="container-fluid border rounded shadow mt-5 p-4 text-center w-75 bg-light">

  <table class="table bg-light ">
    <thead>
      <tr>
        <th scope="col">Sr.no</th>
        <th scope="col">Student Name</th>
        <th scope="col">Semester</th>
        <th scope="col">Course Name</th>
        <th scope="col">Section</th>
        <th scope="col">Teacher Name</th>
        <th scope="col">Grade</th>
        <th scope="col">Edit | Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @enrollments.each do |enrollment| %>
            <td><input type="checkbox" name="brand"> <%= enrollment.id %> </td>
            <td><%= enrollment.student.first_name %> <%= enrollment.student.last_name %></td>
            <td><%= enrollment.semester.semester_no %>
            <td><%= enrollment.section.course.course_title %></td>
            <td><%= enrollment.section.section_name %></td>
            <td><%= enrollment.section.teacher.first_name %> <%= enrollment.section.teacher.last_name %></td>
            <% if enrollment.grade.grade_type =="pending" %>
              <td><%= link_to enrollment.grade.grade_type, edit_admin_enrollment_path(enrollment), class: "btn btn-info" %></td>
            <% else %>
              <td><%= enrollment.grade.grade_type%></td>
            <% end%>
            <td>
              <%= link_to "Edit", edit_admin_enrollment_path(enrollment), class:"btn btn-info" %>
              <%= link_to "Delete", admin_enrollment_path(enrollment),data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure?"
              }, class:"btn btn-info" %>
            </td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="container-fluid border rounded shadow mt-5 p-4 text-center w-75 bg-light">
  <p>
    <%= link_to "Add Enrollment", new_admin_enrollment_path, class: "btn btn-info" %>
    <%= link_to "Back", admin_dashboard_index_path, class: "btn btn-info" %>
  </p>
</div>
